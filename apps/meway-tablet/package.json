{
  "private": true,
  "name": "@meway/meway-tablet",
  "version": "0.0.0",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint --ext js,ts,tsx .",
    "dev": "expo start",
    "build": "expo export --output-dir ./build --platform android",
    "start": "expo start",
    "android": "expo start --android",
    "web": "expo start --web",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-post-install": "pnpm run -w build:mobile"
  },
  "dependencies": {
    "@meway/tailwind-config": "*",
    "@xstate/cli": "^0.4.1",
    "@xstate/react": "^3.0.1",
    "expo": "^47.0.0",
    "expo-dev-client": "~2.0.0",
    "expo-status-bar": "~1.4.2",
    "expo-updates": "~0.15.4",
    "nativewind": "2.0.10",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5",
    "react-native-reanimated": "~2.12.0",
    "react-native-safe-area-context": "^4.4.1",
    "react-native-web": "~0.18.7",
    "xstate": "^4.34.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.1.6",
    "@expo/webpack-config": "~0.17.2",
    "@meway/eslint-config-custom": "*",
    "@types/react": "~18.0.25",
    "@types/react-dom": "~18.0.9",
    "@types/react-native": "~0.70.5",
    "autoprefixer": "^10.4.8",
    "babel-preset-expo": "~9.2.1",
    "postcss": "^8.4.19",
    "postcss-loader": "^4.2.0",
    "tailwindcss": "~3.2.1",
    "typescript": "^4.7.4",
    "webpack": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "@meway/eslint-config-custom",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  }
}